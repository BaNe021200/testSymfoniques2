{% extends 'base.html.twig' %}

{% block title %}Member index{% endblock %}

{% block sub_body %}

    <h1>Member index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.firstname }}</td>
                <td>{{ member.lastname }}</td>
                <td>{{ member.username }}</td>
                <td>{{ member.email }}</td>
                <td>{{ member.password }}</td>
                <td>{{ member.roles ? member.roles|join(', ') : '' }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('member_show', {'id': member.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('member_edit', {'id': member.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('member_new') }}">Create new</a>
{% endblock sub_body %}
